<div class="main">
  <div class="container">
    <h2><span>Redeem Coins</span></h2>
    <% if current_user %>
      <div class="row span6">
        <div class="input-prepend">
          <%= form_tag redeem_coins_path, method: 'put' do %>
            <span class="add-on"><i class="icon icon-qrcode"></i></span>
            <%= text_field_tag :pin_code, params[:pin_code], placeholder: "Pin Code" %>
            <%= submit_tag 'Redeem', class: "btn btn-info" %>
            <% if @prepaid_pin == nil %>
              <%= flash[:error] = "Invalid Pin!" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="row span6">
        <div class="alert alert-danger">Sign In to redeem coins.</div>
      </div>
    </div>
  <% end %>
  </div>
</div>
