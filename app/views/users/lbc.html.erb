<% if current_user %>
<div class="main">
  <div class="container">
    <h2><span>Buy coins with LBC</span></h2>
    <img style="margin-left:50px;" src="https://s3-ap-southeast-1.amazonaws.com/apptivate/image/logo_lbcexpress.jpg"/>
    <div class="span5 well well-small">
      <h3>Your Mobile Number</h3>
      <p>* Know more about LBC Remittance? <%= link_to "LBC Services", "http://www.lbcexpress.com/PH/Services/", target: "new" %></p>
      <p>* Use this number on the LBC Shipper (Nagpapadala) Information</p>

      <%= form_for @user, url: 'lbc_payment' do |f| %>
        <%= f.text_field :number_notify, placeholder: "EX. 09172084128" %>
        <%= f.submit "Save", class: "btn btn-primary", name: "submit_numbernotify" %>
      <% end %>
    </div>
    <% if current_user.number_notify != "" %>
      <%= render 'users/lbc_steps' %>
    <% else %>
      <% #do nothing %>
    <% end %>
  </div>
<% else %>
  <div class="main">
    <div class="container">
      <h2><span>Buy coins with LBC</span></h2>
      <div class="alert alert-danger">Sign in to buy coins with Smart Money.</div>
    </div>
  </div>
<% end %>
